<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- lead form view -->

    <record model="ir.ui.view"  id="crm_case_form_view_leads_ext">
        <field name="name">crm_case_form_view_leads_ext</field>
        <field name="model">crm.lead</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
<!--groups="base.group_no_one"/-->
            <xpath expr="//group/group[1]/field[@name='partner_id']" position="after">
                <field name="customer_class"  />
            </xpath>

            <xpath expr="//group/group[2]/field[@name='partner_id']" position="after">
                <field name="customer_class"  />
            </xpath>
        </field>
    </record>


<!-- lead search view group by -->
    <record model="ir.ui.view" id="view_crm_case_leads_filter_ext">

        <field name="name">view_crm_case_leads_filter_ext</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.view_crm_case_leads_filter"/>
        <field name="arch"  type="xml">

          <xpath expr="//search" position="inside">
            <filter
              name ="Customer Classification"
              context="{'group_by':'customer_class'}"
              />
          </xpath>
        </field>
    </record>



