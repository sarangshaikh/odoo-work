<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="sale_order_ext_form_view">
        <field name="name">sale_order_ext_form_view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch"  type="xml">
            <xpath expr="//field[@name='partner_invoice_id']" position="before">
                <field name="customer_class" readonly="1" force_save="1"/>
            </xpath>
        </field>
    </record>

<!--Sales filter -->
    <record model="ir.ui.view" id="sales_order_filter_ext_view">

        <field name="name">sales.order.filter.ext.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter"/>
        <field name="arch"  type="xml">
          <xpath expr="//search" position="inside">
            <filter
              name ="Customer Classification"
              context="{'group_by':'customer_class'}"
              />
          </xpath>
        </field>
    </record>

<!--Sale Report Filter-->

  <record id="sale_order_product_search__ext_view" model="ir.ui.view">
    <field name="name">sale.order.product.search.ext.view</field>
    <field name="model">sale.report</field>
    <field name="inherit_id" ref="sale.view_order_product_search"/>
    <field name="arch" type="xml">
        <xpath expr="//search" position="inside">
            <filter
                name ="Trade"
                domain="[('customer_class','=','trade')]"
                />
            <filter
                name ="E-Commerce"
                domain="[('customer_class','=','e_com')]"
                />
            <filter
                name ="Retail"
                domain="[('customer_class','=','retail')]"
                />
            <filter
                name ="Customer Classification"
                context="{'group_by':'customer_class'}"
                />
            </xpath>

        </field>
  </record>


</odoo>
