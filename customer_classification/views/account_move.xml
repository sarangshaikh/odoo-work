<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="account_move_ext_form_view">
        <field name="name">account.invoice.ext.form.view</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch"  type="xml">
            <xpath expr="//field[@name='partner_shipping_id']" position="before">
                <field name="customer_class" readonly="1" force_save="1"/>
            </xpath>
        </field>
    </record>


    <record id="view_account_invoice_search__ext_view" model="ir.ui.view">
        <field name="name">view_account_invoice_search__ext_view</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <filter
                    name ="Customer Classification"
                    context="{'group_by':'customer_class'}"
                />
            </xpath>
        </field>
    </record>

    <record id="view_account_invoice_report_search__ext_view" model="ir.ui.view">
        <field name="name">view_account_invoice_report_search__ext_view</field>
        <field name="model">account.invoice.report</field>
        <field name="inherit_id" ref="account.view_account_invoice_report_search"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <filter
                    name ="Trade"
                    domain="[('customer_class','=','trade')]"
                    />
                <filter
                    name ="E-Commerce"
                    domain="[('customer_class','=','e_com')]"
                    />
                <filter
                    name ="Retail"
                    domain="[('customer_class','=','retail')]"
                    />
                <filter
                    name ="Customer Classification"
                    context="{'group_by':'customer_class'}"
                    />
            </xpath>

        </field>
  </record>

</odoo>