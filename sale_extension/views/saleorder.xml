<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_view_order_form_extended" model="ir.ui.view">
        <field name="name">sale.order.form.extended</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
<!--             <xpath expr="//group/group[1]" position="aftder">-->
             <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="shipping_address" attrs="{'readonly':[('state','!=','draft')]}"/>
                    <field name="customer_code" readonly="1" force_save="1"/>
                    <field name="customer_classification" attrs="{'readonly':[('state','!=','draft')]}" force_save="1"/>
                    <field name="customer_color" widget="color" readonly="1" force_save="1" />

<!--&lt;!&ndash;        style="margin-left:3px; margin-top:-10px;"&ndash;&gt;-->
<!--                    <h1>-->
<!--                        <field name="customer_type"   attrs="{'readonly':[('state','!=','draft')]}"/>-->
<!--                     </h1>-->
<!--                     <h1  >-->
<!--                     <label for="customer_type" syle="color:#000000;font-weight: bold;"/>-->
<!--                     <field name="customer_color" widget="color" style="margin-left:75px; width: 2px;" readonly="1" force_save="1"/>-->
<!--                     <field name="customer_type"  style="margin-left:3px; margin-top:-10px;" readonly="1" force_save="1"/>-->
<!--                     </h1>-->



<!--                <br/>-->
             </xpath>
            <xpath expr="//field[@name='payment_term_id']" position="after">
<!--                <field name="order_reference" attrs="{'readonly':[('state','!=','draft')]}"/>-->
                <field name="po_no" attrs="{'readonly':[('state','!=','draft')]}"/>
                <field name="po_date" attrs="{'readonly':[('state','!=','draft')]}"/>
                <field name="fax" attrs="{'readonly':[('state','!=','draft')]}"/>
                <field name="territory" attrs="{'readonly':[('state','!=','draft')]}"/>
                <field name="tax_exempt" attrs="{'readonly':[('state','!=','draft')]}"/>
                <field name="recurring_order" attrs="{'readonly':[('state','!=','draft')]}"/>
                <field name="recurring_period" attrs="{'invisible':[('recurring_order','=',False)],'readonly':[('state','!=','draft')]}"/>

                <field name="recurring_date"  attrs="{'invisible':[('recurring_order','=',False)],'readonly':[('state','!=','draft')]}"/>
                <field name="done_recurring" invisible="1"/>
<!--invisible="1"-->
            </xpath>

            <xpath expr="//field[@name='payment_term_id']" position="attributes">
                <attribute name="options">
                    {'no_open':False,'no_create': False}
                  </attribute>
            </xpath>

            <xpath expr="//field[@name='amount_tax']" position="attributes">
                <attribute name="attrs">
                    {'invisible':[('tax_exempt','=',True)]}
                  </attribute>
            </xpath>
            <xpath expr="//tree/field[@name='tax_id']" position="attributes">
                <attribute name="attrs">{'column_invisible': [('parent.tax_exempt', '=', True)]}</attribute>
            </xpath>

            <xpath expr="//field[@name='order_line']/tree/field[@name='product_template_id']" position="after">
<!--                <field name="product_code"/>-->
                <field name="freight"/>
                <field name="ic_clearing_account"/>
            </xpath>

        </field>
    </record>


    <record id="product_template_only_form_view_extended" model="ir.ui.view">
        <field name="name">product.template.form.extended</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales']" position="inside">
                <group string="ALternative Products">
                 <field name="item1" class="oe_inline"/>
                 <field name="item2" class="oe_inline"/>
                </group>
             </xpath>

        </field>
    </record>




</odoo>



