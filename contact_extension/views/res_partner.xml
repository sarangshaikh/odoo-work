<odoo>

    <!-- Sequence number for Customer -->
   <record id="seq_number_for_customer" model="ir.sequence">
            <field name="name">Code</field>
            <field name="code">res.partner.customer.code</field>
            <field name="prefix">CUS</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
   </record>

    <record id="seq_number_for_supplier" model="ir.sequence">
            <field name="name">Code</field>
            <field name="code">res.partner.supplier.code</field>
            <field name="prefix">SUP</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
   </record>

