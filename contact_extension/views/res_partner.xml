    <record id="view_partner_form_extended" model="ir.ui.view">
        <field name="name">view.res.partner.form.extended</field>
        <field name="model">res.partner</field>
        <field name="priority" eval="200"/>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='image_1920']" position="before">
                <h1>
                    <field name="code" attrs="{'readonly':True}"/>
                </h1>
            </xpath>
<!--                <br/>-->
<!--                <label for="customer_color"/>-->
<!--                <field name="customer_color" widget="color" style="margin-left:32px; width: 2px;"/>-->
<!--                <label for="customer_type"/>-->
<!--                <field name="customer_type"  style="margin-left:3px; margin-top:-10px; width: 81%;"/>-->
<!--                <br/>-->
<!--                 <label for="customer_classification"/>-->
<!--                <field name="customer_classification" style=" width: 81%;"/>-->
<!--            </xpath>-->
<!--            -->

            <xpath expr="//field[@name='property_payment_term_id']" position="after">
                <field name="is_customer" />
            </xpath>

            <xpath expr="//field[@name='property_supplier_payment_term_id']" position="after">
				<field name="is_supplier"/>
            </xpath>

            <xpath expr="//div[@class='o_row']" position="after">
                <div>
                <br/>
                <label for="customer_color"/>
<!--                    style="margin-left:32px; width: 2px;"-->
                <field name="customer_color" widget="color" class="oe_inline" style="margin-left: 55px;"/>
                <br/>
                <label for="customer_type"/>
                <field name="customer_type" class="oe_inline"  style="margin-left: 60px;"/>
                <br/>
                 <label for="customer_classification"/>
                <field name="customer_classification" class="oe_inline"  style="margin-left:6px;"/>

                </div>
            </xpath>

            <xpath expr="//field[@name='vat']" position="after">
               <field name="tax_exempt"/>
               <field name="territory"/>
            </xpath>

        </field>
    </record>






    <record id="sms.res_partner_view_form" model="ir.ui.view">
        <field name="name">res.partner.view.form.inherit.sms</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='mobile']" position="after">
                <field name="phone_sanitized" groups="base.group_no_one" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='phone']" position="replace">
                <label for="phone"/>
                <div class="o_row">
                    <field name="phone" widget="phone" options="{'enable_sms': True}"/>
                </div>

                <label for="phone2"/>
                <div class="o_row">
                    <field name="phone2" widget="phone" options="{'enable_sms': True}"/>
                </div>
            </xpath>
            <xpath expr="//field[@name='mobile']" position="replace">
                <label for="mobile"/>
                <div class="o_row">
                    <field name="mobile" widget="phone" options="{'enable_sms': True}"/>
                </div>
                <label for="fax"/>
                <div class="o_row">
                    <field name="fax"/>
                </div>
            </xpath>
        </field>
    </record>



        <record id="action_menu_res_partner_sequence" model="ir.actions.server">
            <field name="name">Generate Sequence</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="binding_model_id" ref="base.model_res_partner"/>
            <field name="binding_view_types">form,list</field>
            <field name="state">code</field>
            <field name="code">action = records.action_generate_sequence()</field>
        </record>


</odoo>